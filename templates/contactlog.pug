
doctype html 
head
    title Contact Log
    meta(charset="utf-8")
    link#light(href='/css/main.css', rel='stylesheet', type='text/css')
    script(src="/js/main.js" async)
    script(src="/js/table.js" async)
body 
    include navbar.pug
    h1 My Contacts and Appointments 
    div#sale-controller 
        h2 Set Sale 
        label(for="message-field",method="POST") Sale message: 
        input(type="text",name ="message", id="message-field")
        button(id="submit-sale", onclick="submitSale()") Set Sale 
        button(id="end_sale", onclick="endSale()") End Sale
    table 
        tr 
            th Name 
            th email 
            th Prefered appointment date 
            th Requested repairs
            th New customer 
            th Delete entry
        //figure out log math
        
        each contact in contacts
            tr 
                td= contact.name 
                td= contact.email 
                td.date-entry= contact.date
                    span.time-until 
                td= contact.ship_condition 
                td= contact.new_customer 
                td
                    button(id="row-delete",onclick="deleteRow(this)") delete row 
                    